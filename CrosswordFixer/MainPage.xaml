<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrosswordFixer.MainPage">

    <Grid
        x:Name="maingrid"
        
        RowDefinitions="*,10*,*"
        ColumnDefinitions="*,6*,*"
        >
        <Grid
            x:Name="crossGrid"
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Gray"
            >
            
            
        </Grid>

        <Button
            Clicked="Button_Clicked"
            Text="Input values"
                TextColor="Black"
            />
        <VerticalStackLayout
            Grid.Row="1"
            VerticalOptions="Center"
            >
            <Button
                Text="Editor Mode: disabled"
                x:Name="EditMode"
                Clicked="EditMode_Clicked"
                TextColor="Black"
                />
            <Button
                Text="Wipe Board"
                Clicked="WipeBoard_Clicked"
                TextColor="Black"
                />


        </VerticalStackLayout>
        
        
        <VerticalStackLayout
            Grid.Row="1"
            Grid.Column="2"
            VerticalOptions="Center"
            x:Name="initiazeButtons"
            >
            

        </VerticalStackLayout>


    </Grid>
   
</ContentPage>
